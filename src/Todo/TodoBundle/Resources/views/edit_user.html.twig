{% extends "TodoBundle::layout.html.twig" %}
{% block title %}Edit user {{ user.name }} {%endblock%}
{% block content %}
<form action="{{ path('_user_edit',{'id': user.id}) }}" method="post" {{ form_enctype(form) }}>
    {{ form_errors(form) }}

    {{ form_row(form.name) }}

    {{ form_rest(form) }}

    <input type="submit" /> <a href="{{ path('_user_list')}}">Return to the list</a>
</form>
{%endblock%}
